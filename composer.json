{
    "name": "supportpal/phpcpd2sarb",
    "description": "A tool to convert phpmd-phpcpd XML to sarb format.",
    "type": "library",
    "license": "MIT",
    "authors": [
        {
            "name": "Kieran Brahney",
            "email": "kieran@supportpal.com"
        }
    ],
    "require": {
        "php": "^8.1",
        "ext-simplexml": "*",
        "symfony/console": "^6.0"
    },
    "autoload": {
        "psr-4": { "SupportPal\\Phpcpd2Sarb\\": "src" }
    },
    "bin": ["phpcpd2sarb"],
    "require-dev": {
        "supportpal/coding-standard": "^0.4.0",
        "phpstan/phpstan": "^1.0",
        "phpunit/phpunit": "^10.5"
    },
    "config": {
        "preferred-install": "dist",
        "platform": {
            "php": "8.1.0"
        },
        "optimize-autoloader": true,
        "sort-packages": true,
        "allow-plugins": {
            "dealerdirect/phpcodesniffer-composer-installer": false
        }
    }
}
